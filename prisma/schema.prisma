generator client {
  provider     = "prisma-client-js"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Records {
  id        String          @id @default(uuid())
  title     String
  amount    Int
  type      TransactionType
  createdAt DateTime        @default(now()) @map("created_at")
  updatedAt DateTime        @updatedAt @map("updated_at")

  @@map("records")
}

enum TransactionType {
  expense
  income
}
